<div class="mt-5"></div>
<div class="row">
    {{#each courses}}

        <div class="col-sm-6 col-md-4">
            <div class="card mt-4">
            <img src="{{this.image}}" class="card-img-top" alt="anh">
            <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.description}}</p>
                <a href="#" class="btn btn-primary">Mua khóa học</a>
            </div>
            </div>
        </div>

    {{/each}}

</div>

